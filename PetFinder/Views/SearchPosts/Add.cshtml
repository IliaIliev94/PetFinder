@model AddSearchPostFormModel

@{
    ViewData["Title"] = "Add Search Post";
}

<div class="row">
    <form class="offset-md-2 offset-lg-3 col-md-8 col-lg-6 g-3" method="post" asp-controller="SearchPosts" asp-action="Add">
        <h2 class="heading-margin text-center">@ViewData["Title"]</h2>
        <div class="form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control" id="title">
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" type="text" class="form-control"></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>


        <div class="form-group">
            @if (ViewBag.Type == "Found")
            {
                <label asp-for="DateLostFound" class="form-label">Date Found</label>
            }
            else
            {
                <label asp-for="DateLostFound" class="form-label">Date Lost</label>
            }
            <input asp-for="DateLostFound" type="date" name="name" class="form-control" />
        </div>

        @if (ViewBag.Type == "Lost")
        {
            <div class="form-group">
                <label asp-for="PetId">Pet</label>
                <select asp-for="PetId" class="form-control">
                    <option value="0">Create new pet</option>
                    @foreach (var pet in Model.Pets)
                    {
                        <option value="@pet.Id">@pet.Name</option>
                    }
                </select>
            </div>
        }

        <div class="form-group">
            <label asp-for="CityId">City</label>
            <select asp-for="CityId" class="form-control">
                @foreach (var city in Model.Cities)
                {
                    <option value="@city.Id">@city.Name</option>
                }
            </select>
        </div>



        <input type="hidden" asp-for="SearchPostType" value="@ViewBag.Type" />


        <button type="submit" class="btn btn-primary mt-3 col-sm-12 col-md-auto">Submit</button>

    </form>
</div>
