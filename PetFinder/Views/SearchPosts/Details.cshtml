@model SearchPostDetailsServiceModel

@{
    ViewData["Title"] = Model.Title;
    ViewBag.Type = "SearchPosts";
}

<div class="mb-4">
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.ImageUrl" class="img-fluid w-100" alt="@Model.PetSpecies" />
        </div>
    </div>
</div>



<div class="bg-white p-3">
    <h2 class="text-center">@Model.Title</h2>
    <h3 class="text-center">@Model.PetName - @Model.PetSpecies</h3>
    <h5 class="text-center">@Model.City</h5>
    @if (!String.IsNullOrEmpty(Model.PhoneNumber))
    {
        <h5 class="text-center">Phone number for contact: @Model.PhoneNumber</h5>
    }

    <p class="text-justify mt-4">@Model.Description</p>
    <div class="text-center mt-5">
        @if (this.User.GetId() == Model.UserId || this.User.IsInRole(WebConstantscs.AdministratorRoleName))
        {
            <a class=" btn btn-primary" asp-controller="SearchPosts" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class=" btn btn-primary" asp-controller="SearchPosts" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        }
    </div>
</div>


    <div class="bg-white">
        @if (this.User.GetId() != null)
        {

            <form method="post" asp-controller="Comments" asp-action="Add" asp-route-searchPostId="@Model.Id">
                <h2 class="text-center mt-5">Comments</h2>


                <div class="row">
                    <div class="input-group mb-3 mt-5 offset-lg-1">
                        <input required type="text" class="form-control col-lg-10" name="comment" placeholder="Add comment" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </div>

            </form>


        }
    <partial name="~/Views/Comments/_CommentPartial.cshtml" model="@Model.Comments">
</div>

