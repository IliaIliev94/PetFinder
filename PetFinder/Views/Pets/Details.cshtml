@model PetDetailsServiceModel

@{
    ViewData["Title"] = Model.Name;
}


<div class="container-fluid mb-4">
    <div class="row">
        <div class="col-md-12">
            <img src="@Model.ImageUrl" class="img-fluid w-100" alt="@Model.Species" />
        </div>
    </div>
</div>

<div class="container">
    <h2 class="text-center">@Model.Name</h2>
    <h3 class="text-center">@Model.Species - @Model.Size</h3>
    <div class="text-center mt-5">
        <a class=" btn btn-primary" asp-controller="Pets" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
    
</div>