@model string

@{ 
    ViewBag.Controller = "SearchPosts";
}

<h2 class="text-center mt-5">Comments</h2>


<div class="row">
    <div class="input-group mb-3 mt-5 col-xs-4 col-md-auto col-lg-10 offset-lg-1">
        <input required type="text" class="form-control" name="comment" placeholder="Add comment" aria-label="Recipient's username" aria-describedby="basic-addon2">
        <div class="input-group-append">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</div>